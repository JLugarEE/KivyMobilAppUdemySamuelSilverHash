class NewTask(ModalView):
    def __init__(self, **kw):
        super().__init__(**kw)

    def get_time(self):
        mv = ModalView(size_hint=[.6, .7])
        cl = CTP()
        cl.bind(time=self.set_time)
        mv.add_widget(cl)
        mv.open()

    def set_time(self, inst, value):
        print(value)

class Task(ButtonBehavior, BoxLayout):
